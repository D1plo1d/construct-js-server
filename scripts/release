#!/bin/bash
set -e
cd "$( dirname "${BASH_SOURCE[0]}" )" && cd ../

echo ""
echo "Teg Release Preview"
echo "---------------------------------------------------------------------------------------------"

npx --no-install standard-version -a --dry-run

echo ""
echo ""
echo "Are you sure you want to release this new version of Teg?"
echo "---------------------------------------------------------------------------------------------"
echo ""
select yn in "Yes" "No"; do
    case $yn in
        Yes ) break;;
        No ) exit 1;;
    esac
done

echo ""
echo "ðŸŽ‰ Yay! It's Release Day! ðŸŽ‰"
echo ""

npx --no-install standard-version -a

./scripts/build

echo "Uploading builds..."

snapcraft upload --release=beta ./dist/*_amd64.snap
snapcraft upload --release=beta ./dist/*_armhf.snap

echo "Uploading builds... [DONE]"

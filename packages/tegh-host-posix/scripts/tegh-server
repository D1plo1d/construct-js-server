#!/bin/bash

# This file should be symlinked from /usr/local/bin:
# sudo ln --symbolic --target-directory=/usr/local/bin `pwd`/packages/tegh-host-posix/scripts/tegh-server
set -e

export NVM_DIR="$HOME/.nvm"
# Load Node Version Manager and its bash completion script.
[ -s "$NVM_DIR/nvm.sh" ] && source "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && source "$NVM_DIR/bash_completion"

DIR="$(dirname "$(readlink -f "$0")")"
npm run start
